{
  "manifest_version": 3,
  "name": "EventSaver",
  "version": "1.0",
  "description": "Save events from webpages with ease.",
  "permissions": ["contextMenus", "storage", "activeTab", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon1.jpeg",
      "48": "icons/icon2.jpeg",
      "128": "icons/icon3.jpeg"
    }
  },
  "icons": {
    "16": "icons/icon1.jpeg",
    "48": "icons/icon2.jpeg",
    "128": "icons/icon3.jpeg"
  }
}